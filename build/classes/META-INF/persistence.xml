<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PresupuestoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.presupuesto.modelo.Rubro</class>
    <class>com.presupuesto.modelo.Vigencia</class>
    <class>com.presupuesto.modelo.TipoRubro</class>
    <class>com.presupuesto.modelo.Entidad</class>
    <class>com.presupuesto.modelo.Presupuesto</class>
    <class>com.presupuesto.modelo.Adicion</class>
    <class>com.presupuesto.modelo.Ejecucion</class>
    <class>com.presupuesto.modelo.DisponibilidadRubro</class>
    <class>com.presupuesto.modelo.AdicionRubro</class>
    <class>com.presupuesto.modelo.TrasladoRubro</class>
    <class>com.presupuesto.modelo.Traslado</class>
    <class>com.presupuesto.modelo.Beneficiario</class>
    <class>com.presupuesto.modelo.Disponibilidad</class>
    <class>com.presupuesto.modelo.Registro</class>
    <class>com.presupuesto.modelo.Suministro</class>
    <class>com.presupuesto.modelo.OrdenSuministro</class>
    <class>com.presupuesto.modelo.Ops</class>
    <class>com.presupuesto.modelo.Descuento</class>
    <class>com.presupuesto.modelo.EgresoDescuento</class>
    <class>com.presupuesto.modelo.ComprobanteEgreso</class>
    <class>com.presupuesto.modelo.Acceso</class>
    <properties>
      <property name="hibernate.show_sql" value="true"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/presupuesto?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="leiva"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
